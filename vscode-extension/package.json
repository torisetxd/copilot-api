{
  "name": "copilot-api-vscode",
  "displayName": "Copilot API (Embedded)",
  "version": "0.1.0",
  "description": "Run copilot-api inside VS Code without requiring Bun or a separate Node install.",
  "categories": [
    "Other"
  ],
  "keywords": [
    "copilot",
    "llm"
  ],
  "homepage": "https://github.com/caozhiyuan/copilot-api",
  "bugs": {
    "url": "https://github.com/caozhiyuan/copilot-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/caozhiyuan/copilot-api.git"
  },
  "license": "MIT",
  "publisher": "local",
  "type": "module",
  "main": "./dist/extension.js",
  "files": [
    "dist/**",
    "media/**",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun scripts/build.ts",
    "build:debug": "bun scripts/build.ts --debug",
    "dev": "bun scripts/build.ts --debug --watch",
    "package": "bunx vsce package",
    "publish": "bunx vsce publish"
  },
  "contributes": {
    "commands": [
      {
        "command": "copilotApi.start",
        "title": "Copilot API: Start Server"
      },
      {
        "command": "copilotApi.stop",
        "title": "Copilot API: Stop Server"
      },
      {
        "command": "copilotApi.restart",
        "title": "Copilot API: Restart Server"
      },
      {
        "command": "copilotApi.copyEndpoint",
        "title": "Copilot API: Copy Endpoint"
      },
      {
        "command": "copilotApi.openUsageViewer",
        "title": "Copilot API: Open Usage Viewer"
      }
    ],
    "configuration": {
      "title": "Copilot API",
      "properties": {
        "copilotApi.port": {
          "type": "number",
          "default": 4141,
          "minimum": 1,
          "maximum": 65535,
          "description": "Port to listen on (localhost only)."
        },
        "copilotApi.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging."
        },
        "copilotApi.accountType": {
          "type": "string",
          "enum": [
            "individual",
            "business",
            "enterprise"
          ],
          "default": "individual",
          "description": "GitHub account type (Copilot plan routing)."
        },
        "copilotApi.rateLimitSeconds": {
          "type": [
            "number",
            "null"
          ],
          "default": null,
          "minimum": 1,
          "description": "Minimum seconds between requests (optional)."
        },
        "copilotApi.rateLimitWait": {
          "type": "boolean",
          "default": false,
          "description": "Wait instead of error when rate limit is hit."
        },
        "copilotApi.proxyEnv": {
          "type": "boolean",
          "default": false,
          "description": "Initialize proxy from environment variables (HTTP(S)_PROXY, etc)."
        },
        "copilotApi.showToken": {
          "type": "boolean",
          "default": false,
          "description": "Log GitHub and Copilot tokens (debug only)."
        },
        "copilotApi.useWorker": {
          "type": "boolean",
          "default": true,
          "description": "Run server in a worker thread. Disable if you need electron.net.fetch (some environments don't expose it to workers)."
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/vscode": "^1.107.0",
    "@vscode/vsce": "^3.3.1",
    "electron": "^37.2.1",
    "esbuild": "^0.24.0"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "icon": "media/icon.png",
  "extensionKind": [
    "workspace"
  ]
}
